{
	"$schema": "https://json.schemastore.org/eslintrc",
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"prettier",
		"plugin:@typescript-eslint/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],
	"rules": {
		"no-unused-vars": "warn",
		"yoda": "error"
	},
	"ignorePatterns": "build/**"
}
